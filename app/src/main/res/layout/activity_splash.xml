<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:paddingTop="30dp"
    android:paddingEnd="30dp"
    android:paddingStart="30dp"
    android:layout_height="match_parent"
    tools:context=".activity.SplashActivity">

    <TextView
        android:id="@+id/splash_app_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:fontFamily="@font/audiowide"
        android:textColor="@color/iconTwo"
        android:textSize="40dp"
        android:textStyle="italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/splash_app_icon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:elevation="5dp"
        android:outlineSpotShadowColor="@color/secondColor"
        app:layout_constraintBottom_toTopOf="@+id/splash_app_title"
        app:layout_constraintEnd_toEndOf="@+id/splash_app_title"
        app:layout_constraintStart_toEndOf="@+id/splash_app_title"
        app:srcCompat="@drawable/ic_launcher" />

    <TextView
        android:id="@+id/splash_app_version"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/exo_semibold"
        android:textColor="@color/colorPrimary"
        android:textStyle="bold"
        android:padding="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>